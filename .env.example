# TinaCMS Configuration
# Get these from https://app.tina.io (optional for self-hosted)
NEXT_PUBLIC_TINA_CLIENT_ID=***
TINA_TOKEN=***
NEXT_PUBLIC_TINA_BRANCH=main

# Git Configuration for Auto-Push (Required for Docker)
GIT_USER=your-github-username
GIT_EMAIL=your-email@example.com
GH_TOKEN=ghp_your_github_personal_access_token

# GitHub Repository (for constructing remote URLs)
GITHUB_OWNER=your-github-username
GITHUB_REPO=cyberjab-cms

# Git Remote Settings
GIT_REMOTE=origin
GIT_BRANCH=main

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Django Backend Integration (Optional)
DJANGO_API_URL=http://localhost:8000/api
DJANGO_WEBHOOK_SECRET=your-webhook-secret-here

# TinaCMS Self-Hosted Mode
TINA_PUBLIC_IS_LOCAL=false  # Set to false for auto-push in Docker

# Deployment
VERCEL_ENV=preview
